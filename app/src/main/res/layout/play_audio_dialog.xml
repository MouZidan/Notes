<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:padding="10dp"
    android:visibility="gone"
    android:id="@+id/main_play_dialog_layout"

    >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Audio Filename"
            android:id="@+id/title_audio_dialog"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"

            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"


            >

            <Button
                android:id="@+id/play_button_dialog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_play_audio"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                />

            <SeekBar
                android:id="@+id/audio_seekbar_dialog"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_audio_dialog"
        android:text="click to add content..."
        android:background="?android:attr/selectableItemBackgroundBorderless"


        />


</LinearLayout>